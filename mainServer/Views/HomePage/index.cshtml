<script type="text/javascript" charset="utf-8">

    LoadProducts();
    console.log("this is LoadProduct");
    function LoadProducts(){
        console.log("this is LoadProduct");
        
        $.ajax({
            type : "GET",
            url : "/Home/GetProductList",
            success : function(response){
                var card_container = $("#product_cards");
                card_container.empty();
                console.log("this is success");

                $.each(response, function(i,item){
                    var file_path = "ProductImages/"+item.file_name;
                    console.log(file_name_);
                    $('<div class="col-lg-4 col-md-6 mb-4">').append(
                        $('<div class="card h-100">').append(
                            $('<a href="#!"><img class="card-img-top" src="\'' + file_path + '\'" alt="..." />'),
                            $('<div class="card-body">').append(
                                $('<a href="#!">').text(item.product_name),
                                $('<h5>').text("৳"+item.per_unit_price),
                                $('<a  class="btn btn-outline-secondary" onclick="PackageDetails(\'' + item.package_name + '\')">').text('Add To Cart'),
                                $('<a  class="btn btn-outline-secondary" onclick="PackageDetails(\'' + item.package_name + '\')">').text('Buy Now')
                            )
                        )
                     ).appendTo(card_container);
                });

         
            },
            failure : function(response){
                alert(response);
            }
        });
    }

</script>